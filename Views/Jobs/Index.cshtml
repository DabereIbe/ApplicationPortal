@model IEnumerable<Jobs>
@{
    ViewData["Title"] = "Index";
}

<h1>Jobs</h1>

<a asp-action="Create" class="btn btn-primary mb-3" style="float: right;">Add Job</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Job Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.JobName</td>
            <td colspan="2">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> &nbsp; <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
  </tbody>
</table>