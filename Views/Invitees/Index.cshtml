@model IEnumerable<Applicants>
@{
    ViewData["Title"] = "Index";
}

<h1>Invited Applicants</h1>


<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Applicant's Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@String.Concat(item.FirstName , " " , item.LastName)</td>
            <td colspan="2">
                <a asp-controller="Invitees" asp-action="Accept" asp-route-id="@item.Id" class="btn btn-success">Accept</a>
                <a asp-controller="Invitees" asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger">Reject</a>
            </td>
        </tr>
    }
  </tbody>
</table>